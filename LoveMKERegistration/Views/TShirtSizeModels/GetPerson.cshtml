@model LoveMKERegistration.Models.IndividualViewModel

@{
    ViewBag.Title = "GetPerson";
}

<h2>Let's check your t-shirt status</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IndividualId)


        <div class="form-group">
            <div class="col-md-2 control-label">

                <h4>Email</h4>
                </div>
                <div class="col-md-10">
                    @Html.TextBox("email", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
