@model IEnumerable<LoveMKERegistration.Models.TshritSizeTotalViewModel>

@{
    ViewBag.Title = "TshirtTotals";
}

<h2>T-Shirt Totals</h2>

<br />
<br />


<table class="table table-sm table-responsive">
    <tr class="headerRow">
        <th>
            @Html.DisplayName("Size")
        </th>
        <th>
            @Html.DisplayName("Total")
        </th>
    </tr>
    <tbody class="bodyRow">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </tbody>

</table>
